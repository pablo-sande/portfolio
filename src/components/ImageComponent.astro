---
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'

interface Props {
	imagePath: string
	altText: string
	customClass: string
}

const { imagePath, altText, customClass } = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>('./assets/*')

if (!images[imagePath])
	throw new Error(`"${imagePath}" does not exist in glob: "./assets/*"`)
---

<Image src={images[imagePath]()} alt={altText} class={customClass} />
