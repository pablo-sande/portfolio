---
import { MobileHeader } from './MobileHeader'
---

<div
    id="header"
    class="flex items-center flex-row justify-between h-28 w-full p-8 z-10 top-0 fixed transition-all duration-500"
>
    <div class="flex">
        <a href="/" class="type-in text-4xl font-bold text-white">Pablo Sande</a
        >
    </div>

    <div class="lg:flex items-center space-x-4 hidden">
        <a href="/about" class="text-white hover:text-blue-400">About me</a>
        <a href="/skills" class="text-white hover:text-blue-400">Skills</a>
        <a href="/site" class="text-white hover:text-blue-400"
            >About this site</a
        >
        <a href="/contact" class="text-white hover:text-blue-400">Contact</a>
        <a href="/cv" class="text-white hover:text-blue-400">Dowload CV</a>
    </div>

    <div class="lg:hidden flex">
        <MobileHeader client:visible />
    </div>
</div>

<style lang="scss">
    .type-in {
        overflow: hidden;
        border-right: 0.1em solid white;
        white-space: nowrap;
        margin: 0 auto;
        animation:
            typing 2s steps(20, end),
            blink-caret 1s step-end infinite;
    }

    @keyframes typing {
        from {
            width: 0;
        }
        to {
            width: 100%;
        }
    }

    @keyframes blink-caret {
        from,
        to {
            border-color: transparent;
        }
        50% {
            border-color: white;
        }
    }
</style>
