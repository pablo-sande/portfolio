---
import Footer from '../components/Footer.astro'
import Project from '../components/Project.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title="Welcome to Astro.">
    <main class="">
        <object
            type="image/svg+xml"
            data="rocket2.svg"
            class="-rotate-45 launch fixed left-0 right-0 ml-auto mr-auto"
        ></object>
        <div
            class="h-screen flex launch-section items-center flex-col text-white p-5 z-200 max-w-screen md:max-w-lg overflow-x-hidden overflow-y-auto left-0 right-0 ml-auto mr-auto"
        >
            <img
                src="/pablo.png"
                alt=""
                class="max-w-80 max-h-80 md:max-w-96 md:max-h-96 size-in rounded-full shadow-[0_0_10px_5px] shadow-gray-500"
            />
            <div class="flex">
                <h1
                    class="type-in type-in-1 text-6xl font-bold text-center pt-4"
                >
                    Frontend
                </h1>
            </div>
            <div class="flex">
                <h1
                    class="type-in type-in-2 text-6xl font-bold text-center pt-4"
                >
                    Architect
                </h1>
            </div>
            <p class="text-white text-lg show-up pt-8">
                Hey! I'm Pablo, a Frontend Architect with 10 years of
                experience. Please feel free to navigate through this portfolio
                if you want to know me a bit better :)
            </p>
        </div>

        <!-- <div class="flex relative h-screen w-full h-96 bg-[rgb(0 0 3);]">
            <Project />
        </div> -->
    </main>
</Layout>

<style lang="scss">
    .launch {
        width: 20rem;
        height: 20rem;
        animation: launch 3.5s linear 1s forwards;
        margin-top: -150vh;
    }

    @keyframes launch {
        0% {
            margin-top: 100vh;
        }
        25% {
            margin-top: 35vh;
        }
        50% {
            margin-top: 20vh;
        }
        100% {
            margin-top: -150vh;
        }
    }

    .launch-section {
        animation: launchsection 3.5s linear 1s forwards;
        margin-top: 100vh;
        padding-top: 4.6rem;
    }

    @keyframes launchsection {
        0% {
            margin-top: 100vh;
            padding-top: 4.6rem;
        }
        25% {
            margin-top: 35vh;
            padding-top: 4.6rem;
        }
        50% {
            margin-top: 20vh;
            padding-top: 4.6rem;
        }
        70% {
            margin-top: 20vh;
            padding-top: 4.6rem;
        }
        100% {
            margin-top: 0;
            padding-top: 2rem;
        }
    }

    .size-in {
        width: 4.5rem;
        height: 4.5rem;
        animation:
            sizein 1s linear 3.5s forwards,
            float 6s linear infinite 6s;
    }

    .show-up {
        opacity: 0;
        animation: showup 1s linear 8s forwards;
    }

    @keyframes showup {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    @keyframes sizein {
        0% {
            width: 4.5rem;
            height: 4.5rem;
        }
        100% {
            width: 24rem;
            height: 24rem;
        }
    }

    @keyframes jumpout {
        0% {
            transform: translate(0, 0);
        }
        20% {
            transform: translate(5rem, -3rem);
        }
        100% {
            transform: translate(0, 0);
        }
    }

    .floating {
        transform: translate(0, 0);
        animation: float 6s linear 2.5s infinite;
    }

    @keyframes float {
        0% {
            transform: translate(0, 0);
        }
        25% {
            transform: translate(0, -4px);
        }
        50% {
            transform: translate(-4px, -6px);
        }
        75% {
            transform: translate(1px, -7px);
        }
        100% {
            transform: translate(0, 0);
        }
    }

    .type-in {
        overflow: hidden;
        border-right: 0.1em solid white;
        white-space: nowrap;
        margin: 0 auto;
        opacity: 0;
    }

    .type-in-1 {
        animation:
            showup 0s linear 5s forwards,
            typing 1s steps(10, end) 5s,
            blink-caret 1s step-end 5s forwards;
    }

    .type-in-2 {
        animation:
            showup 0s linear 6s forwards,
            typing 1s steps(10, end) 6s,
            blink-caret 1s step-end 6s forwards;
    }

    @keyframes typing {
        from {
            width: 0;
        }
        to {
            width: 100%;
        }
    }

    @keyframes blink-caret {
        from,
        to {
            border-color: transparent;
        }
        50% {
            border-color: white;
        }
    }
</style>

<script>
    window.onload = () =>
        document
            .getElementById('main-wrapper')
            ?.classList.add('overflow-hidden')

    setTimeout(() => {
        document
            .getElementById('main-wrapper')
            ?.classList.remove('overflow-hidden')
    }, 8000)
</script>
